{
    "manifest_version": 3,
    "name": "Daily Task Manager",
    "version": "1.0",
    "description": "Manage your daily tasks and receive reminders.",
    "icons": {
      "16": "icons/icon.png"
    },
    "permissions": [
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png"
      }
    }
  }
  